<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_turn_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/yuanjiaoblue"
        android:padding="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="@string/tianbaoxinxinxi"
        android:textColor="@color/White"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_min"
        android:layout_below="@+id/button_turn_new" />

    <ListView
        android:id="@+id/listView_list_guanxian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="@dimen/text_min"
        android:layout_marginRight="@dimen/text_min"
        android:dividerHeight="1dp"/>
</RelativeLayout>
