<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/bianju"
        layout="@layout/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jiangyonghao.recycleview.nanshuibeidiao.view.ListViewForScrollView
                android:id="@+id/listview_wode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_turn_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_fragment_basic_ping"
        android:layout_marginLeft="@dimen/list_guanxian_button_margin"
        android:layout_marginRight="@dimen/list_guanxian_button_margin"
        android:layout_marginTop="@dimen/list_guanxian_top_margin"
        android:background="@drawable/yuanjiaoblue"
        android:text="@string/wodegongzuobutton"
        android:textColor="@color/White"
        android:textSize="@dimen/text_title" />
</LinearLayout>
