<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_fragment_basic_ping"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_item_detail_biaoti"
            style="@style/common_tianchong_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/m_text"
            android:layout_marginLeft="@dimen/m_text"
            android:layout_marginTop="@dimen/m_text"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1"
            android:textSize="@dimen/text_neirong" />

        <TextView
            android:id="@+id/textView_item_detail_neirong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/m_text"
            android:layout_marginRight="@dimen/item_fragment_margin"
            android:layout_weight="5"
            android:background="@color/White"
            android:gravity="center|right"
            android:text="2"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/text_neirong" />


        <ImageView
            android:id="@+id/imageView_news_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@mipmap/icon_more" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/partingline" />
</LinearLayout>

