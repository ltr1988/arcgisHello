<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_item_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_view_margin_small"
        android:layout_marginTop="@dimen/common_view_margin_small"
        android:layout_weight="1"
        android:textColor="@color/textColorBlack"
        android:background="@color/White"
        android:textSize="@dimen/text_yiji" />

    <Switch
        android:id="@+id/switch_item_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_view_margin_small"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/common_view_margin_small"
        android:layout_weight="1"
        android:background="@color/White" />

</LinearLayout>