<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/item_name_tv"
                style="@style/common_tianchong_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:text="@string/shijianmc1"
                android:textSize="@dimen/south_margin_yiji"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_time_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/south_margin_tv_ed"
                android:layout_weight="1.2"
                android:background="@color/White"
                android:text="2016-7-20  8:39:23"
                android:textSize="@dimen/south_margin_erji" />

        </LinearLayout>

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="#0000"
            android:src="@drawable/select_more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_view_margin_xmid"
        android:background="@color/toumingyanse"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:background="#0000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="#0000"
                android:src="@mipmap/icon_map_searchpoint" />

            <TextView
                android:id="@+id/item_locate_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/basic_button_margin"
                android:background="#0000"
                android:text="大宁管理处西堤巴里巴里"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_position_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/south_margin_tv_ed"
            android:layout_weight="1.3"
            android:background="#0000"
            android:text="大宁管理处-工程科发现"
            android:textSize="@dimen/text_erji" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_view_margin_xmid"
        android:background="@color/toumingyanse"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:padding="@dimen/margin_min"
        android:id="@+id/relative_weishangbao_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal">

        <Button
            android:id="@+id/upload_bt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_margin"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/basic_button_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/basic_button_marginp"
            android:background="@drawable/upload_btn"
            android:text="@string/shangbao"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/basic_button_marginp"
            android:layout_toLeftOf="@+id/upload_bt"
            android:background="@drawable/delete_btn"
            android:text="@string/shanchu"
            android:textColor="@color/gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_sjwsb_yishangbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="@color/White"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_sjwsb_yishangbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/White"
            android:textSize="@dimen/text_yiji" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />
</LinearLayout>