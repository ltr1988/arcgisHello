<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/daohang"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/text_min"
        android:src="@mipmap/icon_map_daohang" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wolocation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_map_position" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="@dimen/text_min"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/melocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@null"
                android:gravity="left"
                android:text="100ç±³"
                android:padding="0dp"
                android:textColor="@color/textColorBlack"
                android:textSize="@dimen/text_yiji" />
            <ImageView
                android:id="@+id/bianhua"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/k"
                android:gravity="left" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>