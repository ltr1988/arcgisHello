<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_guanxian_button_margin"
        android:background="@color/White"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/basic_button_marginp"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_wait_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:text="小哑巴河事件"
                android:textSize="@dimen/text_yiji"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_wait_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/south_margin_erji"
                android:background="@color/White"
                android:text="2016-------"
                android:textSize="@dimen/text_erji"
                android:textStyle="italic" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView_news_into"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@mipmap/icon_more" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/partingline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/basic_button_marginp"
        android:background="@color/White"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_wait_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:drawableLeft="@mipmap/icon_map_searchpoint"
            android:text="大宁管理处巴里巴里"
            android:textSize="@dimen/text_yiji"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_wait_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/south_margin_erji"
            android:background="@color/White"
            android:text="sdsadasd"
            android:textSize="@dimen/text_erji"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/partingline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basic_button_marginp"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_button_marginp"
            android:background="@color/White"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/White"
                android:text="@string/waitshijianxingzhi"
                android:textSize="@dimen/text_erji"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textview_wait_xingzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/White"
                android:text="应急调度"
                android:textSize="@dimen/text_erji"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/White"
                android:text="@string/waityujingjibie"
                android:textSize="@dimen/text_erji"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textview_wait_jibie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/White"
                android:text="dasdasdas"
                android:textSize="@dimen/text_erji"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_ic_wh" />
</LinearLayout>

